{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Multiple Deployment Options",
  "description": "",
  "longDescription": "The Delivery Pipeline automates the continuous deployment of the Fibonacci services to Cloud Foundry, OpenWhisk and Kubernetes.",
  "type": "object",
  "properties": {
    "target-region": {
      "description": "The IBM Cloud region",
      "type": "string"
    },
    "target-organization": {
      "description": "The IBM Cloud org",
      "type": "string"
    },
    "target-space": {
      "description": "The IBM Cloud space",
      "type": "string"
    },
    "api-key": {
      "description": "IBM Cloud API key (Obtain one using 'ibmcloud iam api-key-create my-new-key')",
      "type": "string"
    },
    "target-cluster-name": {
      "description": "Existing Kubernetes cluster name (if empty, the toolchain will not deploy the service to Kubernetes)",
      "type": "string"
    },
    "image-name": {
      "description": "Fibonnaci service Docker image. Obtain the Docker namespace using 'bx cr namespace-list'.",
      "type": "string"
    },
    "registry-namespace": {
      "description": "Image Registry Namespace",
      "type": "string"
    }
  },
  "required": [
    "target-region",
    "target-organization",
    "target-space",
    "api-key",
    "target-cluster-name",
    "image-name",
    "registry-namespace"
  ],
  "form": [{
      "type": "validator",
      "url": "/devops/setup/bm-helper/helper.html"
    },
    {
      "type": "password",
      "readonly": false,
      "title": "IBM Cloud API Key",
      "key": "api-key"
    },
    {
      "type": "table",
      "columnCount": 1,
      "widths": [ "100%" ],
      "items": [
        {
          "type": "label",
          "title": "Cloud Foundry and Cloud Functions"
        },
        {
          "type": "label",
          "title": "The toolchain will deploy the Fibonacci service as a Cloud Foundry application with a random route and as a Cloud Functions action. The action will also be exposed as an HTTP endpoint. Specify the space where the application and the action will be deployed."
        }
      ]
    },


    {
      "type": "table",
      "columnCount": 3,
      "widths": ["33%", "33%", "33%"],
      "items": [
        {
          "type": "label",
          "title": "Region"
        },
        {
          "type": "label",
          "title": "Organization"
        },
        {
          "type": "label",
          "title": "Space"
        },
        {
          "type": "select",
          "key": "target-region"
        },
        {
          "type": "select",
          "key": "target-organization"
        },
        {
          "type": "select",
          "key": "target-space",
          "readonly": false
        }
      ]
    },

    {
      "type": "table",
      "columnCount": 1,
      "widths": [ "100%" ],
      "items": [
        {
          "type": "label",
          "title": "Kubernetes"
        }
      ]
    },
    {
      "key": "target-cluster-name",
      "readonly": false,
      "type": "select",
      "title": "Cluster Name"
    },
    {
      "key": "registry-namespace",
      "readonly": false,
      "type": "text",
      "title": "Image Registry Namespace",
      "description": "The image registry namespace (4 chars at least,  letters/digits/underscores). New namespace will be automatically created, you can also create a new namespace with 'ibmcloud cr namespace-add'.",
    },
    {
      "key": "image-name",
      "readonly": false,
      "type": "text",
      "title": "Image Name"
    }
  ]
}
